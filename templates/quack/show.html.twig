{% extends 'base.html.twig' %}

{% block title %}Quack{% endblock %}

{% block body %}
    <h1>Quack</h1>

    <table class="table table-warning">
        <tbody>
        <tr>
            <th>Pics</th>
            <td><img src="{{ quack.picture }}" class="rounded mx-auto" alt="quack pic" width="250" height="250"></td>
        </tr>
        <tr>
            <th>Content</th>
            <td>{{ quack.Content }}</td>
        </tr>
        <tr>
            <th>Created_at</th>
            <td>{{ quack.createdAt ? quack.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        </tbody>
    </table>
    {% if quack.comments is not empty %}
        <table class="table table-warning">
            <thead>
            <tr>
                <th>De :</th>
                <th>Commentaire :</th>
                <th>Poster le :</th>
            </tr>
            </thead>
            <tbody>
            {% for comment in quack.comments %}
            <tr>
                <td>{{ comment.author.duckname }}</td>
                <td>{{ comment.content }}</td>
                <td>{{ comment.createdAt|date }}</td>
            </tr>
            {% endfor %}
            </tbody>

        </table>
    {% endif %}

    <a href="{{ path('quack_comment', {'id': quack.id}) }}"><button class="btn-primary btn">Add some comment</button></a>
    <a href="{{ path('quack_index') }}"><button class="btn-primary btn">back to list</button></a>
    <a href="{{ path('quack_edit', {'id': quack.id}) }}"><button class="btn-primary btn">edit</button></a>

    {{ include('quack/_delete_form.html.twig') }}
{% endblock %}
