<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
    {% block stylesheets %}
        <style>
            body {
                background-image: url("https://medias.spotern.com/spots/w640/173/173088-1544893052.jpg");
                background-size: cover;
            }

            h1, h3 {
                color: #ffc107;
            }

            .duck-text {
                color: #ffc107;
            }

            .flex {
                display: flex;
                justify-content: center;
                flex-direction: row;
            }
        </style>
        {# {{ encore_entry_link_tags('app') }} #}
    {% endblock %}

    {% block javascripts %}
        {# {{ encore_entry_script_tags('app') }} #}
    {% endblock %}
</head>
<body>
<a href="{{ path('app_login') }}" class="btn btn-warning">Sign in</a>
<a href="{{ path('app_logout') }}" class="btn btn-warning">Log out</a>
<a href="{{ path('app_register') }}" class="btn btn-warning">Join us !</a>
<a href="{{ path('duck_index') }}" class="btn btn-warning">Maison !</a>
{% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('users') }}" class="btn btn-warning">MODERATION !!!!!!!!</a>
{% endif %}
{% block body %}{% endblock %}
</body>
</html>
