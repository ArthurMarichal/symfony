{% extends 'base.html.twig' %}

{% block title %}Duck index{% endblock %}

{% block body %}
    {% if app.user.duckname != null %}
    <h1>Hello {{ app.user.duckname}}</h1>
    <img src="{{ app.user.picture }}" alt="profil pic" width="250" height="250">
     <button><a href="{{ path('duck_show', {'duckname': app.user.duckname}) }}">Mon Duck !</a></button>
    {% else %}
    <h1>Welcome new Duck !</h1>
    You can read the Quacks below.
    {% endif %}
    <h3>Here is all the Ducks :</h3>
    <table class="table text-light">
        <thead>
            <tr>
                <th>Duckname</th>
                <th>Firstname</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for duck in ducks %}
            <tr>
                <td>{{ duck.duckname }}</td>
                <td>{{ duck.firstname}}</td>
                <td>
                    <a href="{{ path('duck_show', {'duckname': duck.duckname}) }}">show</a>

{#                    <a href="{{ path('duck_delete', {'id': ducks.id}) }}">delete</a>#}
                </td>
            </tr>

        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        <tr>
            <th>{{ include('quack/index.html.twig') }}</th>
        </tr>
        </tbody>
    </table>

<button><a href="{{ path('quack_new') }}">New Quack !</a></button>
    <button type="submit" name="logout"><a href="{{ path('app_logout') }}">Log out</a></button>
{% endblock %}
