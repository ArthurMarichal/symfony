{% extends 'base.html.twig' %}

{% block title %}Quack{% endblock %}

{% block body %}
    <h1>{{ duck.firstname }}</h1>

    <table class="duck-text">
        <tbody>
        <tr>
            <td><img src="{{ duck.picture }}" alt="profil pic" width="250" height="250"></td>
        </tr>
            <tr>
                <th>email</th>
                <td>{{ duck.email }}</td>
            </tr>
            <tr>
                <th>firstname</th>
                <td>{{ duck.firstname }}</td>
            </tr>
            <tr>
                <th>lastname</th>
                <td>{{ duck.lastname }}</td>
            </tr>
            <tr>
                <th>duckname</th>
                <td>{{ duck.duckname }}</td>
            </tr>
            <tr>
                <th>There is all your Quacks :</th>
                <th>{{ include('quack/quack_duck_index.html.twig')}}</th>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('duck_index') }}"><button class="btn btn-warning">Back to list</button></a>

    <a href="{{ path('duck_edit', {'id': duck.id}) }}"><button class="btn btn-warning">Edit</button></a>
    <a href="{{ path('quack_new') }}"><button class="btn btn-warning">Write a new Quack</button></a>
    {{ include('security/_delete_form.html.twig') }}

{% endblock %}
